<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>CoreMed</title>
    <link href="~/AdminLTEFiles/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/AdminLTEFiles/plugins/fontawesome-free/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/AdminLTEFiles/plugins/fontawesome-free/css/solid.min.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <link href="~/AdminLTEFiles/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

    <!-- Theme style -->
    <link href="~/AdminLTEFiles/css/adminlte.css" rel="stylesheet" />

    <link rel="shortcut icon" type="image/x-icon" href="~/AdminLTEFiles/img/cmlogo.ico" />
    <!-- Google Font: Source Sans Pro -->
    @*<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">*@
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light" id="navbarItems">
            <!-- Left navbar links -->
            <ul class="navbar-nav" >
                @*<li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>*@
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("EmployeeList","Employee")" class="nav-link nav-icon fas fa-users">
                        CoreMed Employees
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("ComapniesList","Company")" class="nav-link fa fa-building">
                        Companies
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("CustomerList","Customer")" class="nav-link fa fa-user">
                        Companies Employee
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("AppointmentList","Appointment")" class="nav-link fa fa-envelope">
                        Appointments
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("DocumentLists","Document")" class="nav-link fa fa-file">
                        Documents
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("CreateNotes","MakeNotes")" class="nav-link fa fa-sticky-note">
                        Make Notes
                    </a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item d-none d-sm-inline-block">
                    @Html.Partial("_LoginPartial")

                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index","Home")" class="brand-link">
                <img src="~/AdminLTEFiles/img/cmlogo.png" alt="CoreMed Logo" class="brand-image"
                     style="opacity: 0.9">
                <span class="brand-text font-weight-light">CoreMed</span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar ">
                <!-- Sidebar Menu -->
                <div id="customer_manag_sidebar" style="display:none">
                    @{
                        Html.RenderPartial("~/Views/Customer/_CustomerSidebar.cshtml");
                    }
                </div>
                <div id="company_manag_sidebar" style="display:none">
                    @{
                        Html.RenderPartial("~/Views/Company/_CompanySideBar.cshtml");
                    }
                </div>
                <div id="document_manag_sidebar" style="display:none">
                    @{
                        Html.RenderPartial("~/Views/Document/_DocumentSideBar.cshtml");
                    }
                </div>
                <div id="appointment_manag_sidebar" style="display:none">
                    @{
                        Html.RenderPartial("~/Views/Appointment/_AppointmentSideBar.cshtml");
                    }
                </div>
                <div id="employee_manag_sidebar" style="display:none">
                    @{
                        Html.RenderPartial("~/Views/Employee/_EmployeeSidebar.cshtml");
                    }
                </div>
                <div id="notes_manag_sidebar" style="display:none">
                    @{
                        Html.RenderPartial("~/Views/MakeNotes/_NotesSideBar.cshtml");
                    }
                </div>
            </div>
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                    <!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                With the heart in the center
            </div>
            <!-- Default to the left -->
            <strong>Developed By <a href="https://www.fiverr.com/nadirali768?up_rollout=true">Nadir Abrar</a>.</strong> All rights reserved.
        </footer>
    </div>
    @RenderSection("scripts", required: false)
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    @section scripts
        {

        <script src="~/AdminLTEFiles/plugins/jquery/jquery.js"></script>

        <!-- Bootstrap 4 -->

        <script src="~/AdminLTEFiles/plugins/bootstrap/js/bootstrap.bundle.js"></script>
        <!-- AdminLTE App -->

    }

</body>
</html>
