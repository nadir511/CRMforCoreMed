@model List<StephenCoreMed.Models.ViewModels.AppoinmentVM>
<style>
    #appointment_manag_sidebar {
        display: block !important;
    }
</style>
@{
    ViewBag.Title = "AppointmentList";
}

<h2 class="rounded " style="background-color:#343a40;color:white"><center>Appointment List</center></h2>

<table id="AppTable" class="table table-striped table-bordered" style="width:100%">

    <thead>
        <tr>
            <th style="display:none">ID</th>
            <th>Created By</th>
            <th>Appointment Title</th>
            <th>Appointment Date</th>
            <th>Company Name</th>
            <th>Customer Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td style="display:none">
                @Html.EditorFor(m => item.A_ID)
            </td>
            <td>
                @Html.DisplayFor(m => item.CreatedBY)
            </td>
            <td>
                @Html.DisplayFor(m => item.A_Title)
            </td>
            <td>
                @Html.DisplayFor(m => item.A_Date)
            </td>
            <td>@Html.DisplayFor(m => item.CompanyName)</td>
            <td>@Html.DisplayFor(m => item.CustomerName)</td>
            <td>@Html.DisplayFor(m => item.A_Description)</td>
            <td>@Html.ActionLink(" ", "EditAppointment", "Appointment", new { id = item.A_ID, }, new { @class = "btn btn-primary fa fa-pencil-square-o", title = "Click to Edit " + item.A_Title + " information" })</td>

        </tr>
        }
    </tbody>
</table>
<script src="~/AdminLTEFiles/plugins/jquery/jquery.js"></script>
<script src="~/AdminLTEFiles/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/AdminLTEFiles/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>

<script>
    $(document).ready(function () {
        $('#AppTable').DataTable();
    });
</script>
