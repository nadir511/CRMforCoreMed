@model List<StephenCoreMed.Models.ViewModels.DocumentVM>
<style>
    #document_manag_sidebar {
        display: block !important;
    }
</style>
@{
    ViewBag.Title = "DocumentList";
}

<link href="~/AdminLTEFiles/plugins/fontawesome-free/css/solid.css" rel="stylesheet" />

<h2 class="rounded " style="background-color:#343a40;color:white"><center>Document List</center></h2>
<table id="DocTable" class="table table-striped table-bordered" style="width:100%">

    <thead>
        <tr>
            <th style="display:none">ID</th>
            <th>Document Name</th>
            <th>Company Name</th>
            <th>Customer Name</th>
            <th>Written By</th>
            <th>Download Document</th>
            <th>Remove Document</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td style="display:none">
                @Html.DisplayFor(m => item.D_Id)
            </td>
            <td>
                @Html.DisplayFor(m => item.D_Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(m => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(m => item.WrittenBy)
            </td>
            <td>@Html.ActionLink(" ", "DownloadDoc", "Document", new { id = item.D_Id, }, new { @class = "btn btn-primary fa fa-download", title = "Click to Download Document" })</td>
            <td>@Html.ActionLink(" ", "RemoveDoc", "Document", new { id = item.D_Id, }, new { @class = "btn btn-primary fa fa-trash", title = "Remove Document" })</td>

        </tr>
        }
    </tbody>

</table>
<script src="~/AdminLTEFiles/plugins/jquery/jquery.js"></script>
<script src="~/AdminLTEFiles/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/AdminLTEFiles/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#DocTable').DataTable();
    });
</script>

