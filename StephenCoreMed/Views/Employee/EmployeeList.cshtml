@model List<StephenCoreMed.Models.ViewModels.EmployeeVM>
<style>
    #employee_manag_sidebar {
        display: block !important;
    }
</style>
@{
    ViewBag.Title = "EmployeeList";
}
<h2 class="rounded " style="background-color:#343a40;color:white"><center>Employee List</center></h2>
<table id="CustomerTable" class="table table-striped table-bordered" style="width:100%">

    <thead>
        <tr>
            <th style="display:none">ID</th>
            <th>Employee Name</th>
            <th>Department</th>
            <th>Email</th>
            <th>Cell Number</th>
            <th>City</th>
            <th>Address</th>
            <th>Edit</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td style="display:none">
                @Html.DisplayFor(m => item.Employee_Id)
            </td>
            <td>
                @Html.DisplayFor(m => item.Employee_Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.DepartmentName)
            </td>
            <td>@Html.DisplayFor(m => item.Employee_Email)</td>
            <td>@Html.DisplayFor(m => item.Employee_CellNumber)</td>
            <td>@Html.DisplayFor(m => item.Employee_City)</td>
            <td>@Html.DisplayFor(m => item.Employee_Address)</td>
            <td>@Html.ActionLink(" ", "EditEmployee", "Employee", new { id = item.Employee_Id, }, new { @class = "btn btn-primary fa fa-pencil-square-o", title = "Click to Edit " + item.Employee_Id + " information" })</td>

        </tr>
        }
    </tbody>

</table>
<script src="~/AdminLTEFiles/plugins/jquery/jquery.js"></script>
<script src="~/AdminLTEFiles/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/AdminLTEFiles/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>

<script>
    $(document).ready(function () {
        $('#CustomerTable').DataTable({
            "columnDefs": [
                { "searchable": false, "targets": 0 },
                { "searchable": false, "targets": 2 },
                { "searchable": false, "targets": 3 },
                { "searchable": false, "targets": 4 },
                { "searchable": false, "targets": 5 },
                { "searchable": false, "targets": 6 },
                { "searchable": false, "targets": 7 },
            ]
        });
    });
</script>